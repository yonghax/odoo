<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="hr_equipment_view_form_inherit" model="ir.ui.view">
            <field name="name">hr.equipment.form.inherit</field>
            <field name="model">hr.equipment</field>
            <field name="inherit_id" ref="hr_equipment.hr_equipment_view_form" />
            <field name="arch" type="xml">
                <field name="location" position="replace">
                    <field name="location" invisible="1"/>
                </field>
                <field name="warranty" position="after">
                    <field name="location_id"/>
                </field>
            </field>
        </record>

        <record id="view_branch_tree" model="ir.ui.view">
            <field name="name">equipment.branch.tree</field>
            <field name="model">hr.equipment.branch</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Branch Located">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="view_location_tree" model="ir.ui.view">
            <field name="name">hr.equipment.location.tree</field>
            <field name="model">hr.equipment.location</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Equipment Located">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="branch_id"/>
                </tree>
            </field>
        </record>

        <record id="view_branch_form" model="ir.ui.view">
            <field name="name">equipment.branch.form</field>
            <field name="model">hr.equipment.branch</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Branch Located">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                            </button>
                            <!-- <button name="106" type="object" icon="fa-sitemap" class="oe_stat_button" attrs="{'invisible': [('location_ids', '&lt;=', 1)]}">
                                <field string="Locations" name="location_ids" widget="statinfo"/>
                            </button> -->
                        </div>
                        <div class="oe_title">
                            <label class="oe_edit_only" for="name" string="Branch Location Name"/>
                            <h1><field name="name" placeholder="Branch Location Name"/></h1>
                        </div>
                        <group>
                            <label for="code"/>
                            <field name="code" nolabel="1"/>
                            <label for="partner_id"/>
                            <field name="partner_id" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_location_form" model="ir.ui.view">
            <field name="name">equipment.location.form</field>
            <field name="model">hr.equipment.location</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Location">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label class="oe_edit_only" for="name" string="Location Name"/>
                            <h1><field name="name" placeholder="Equipment Location Name"/></h1>
                        </div>
                        <group>
                            <label for="code"/>
                            <field name="code" nolabel="1"/>
                            <label for="branch_id"/>
                            <field name="branch_id" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="equipment_branch_action" model="ir.actions.act_window">
            <field name="name">Equipment Branch</field>
            <field name="res_model">hr.equipment.branch</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_branch_tree"/>
        </record>

        <menuitem 
            id="menu_equipment_branch"
            name="Branch Location" 
            parent="hr_equipment.menu_equipment_configuration" 
            sequence="90" 
            action="equipment_branch_action" 
            groups="base.group_hr_manager,base.group_hr_user,base.group_user" />

        <record id="equipment_location_action" model="ir.actions.act_window">
            <field name="name">Equipment Location</field>
            <field name="res_model">hr.equipment.location</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_location_tree"/>
        </record>

        <menuitem 
            id="menu_equipment_location"
            name="Location" 
            parent="hr_equipment.menu_equipment_configuration" 
            sequence="91" 
            action="equipment_location_action" 
            groups="base.group_hr_manager,base.group_hr_user,base.group_user" />
    </data>
</openerp>