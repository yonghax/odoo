<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_dynamic_financial_report_tree" model="ir.ui.view">
            <field name="name">account.dynamic.financial.report.tree</field>
            <field name="model">account.dynamic.financial.report</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Account Report">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_dynamic_financial_report_form" model="ir.ui.view">
            <field name="name">account.dynamic.financial.report.form</field>
            <field name="model">account.dynamic.financial.report</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Dynamic Account Report">
                    <sheet>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group>
                            <group>
                                <field name="report_type"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                            <group>
                                <field name="debit_credit"/>
                            </group>
                        </group>
                        <separator string="Report Lines"/>
                        <field name="line_ids" nolabel="1" />
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_dynamic_financial_report_line_tree" model="ir.ui.view">
            <field name="name">account.dynamic.financial.report.line.tree</field>
            <field name="model">account.dynamic.financial.report.line</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Dynamic Financial Report">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="level"/>
                </tree>
            </field>
        </record>

        <record id="view_dynamic_financial_report_line_form" model="ir.ui.view">
            <field name="name">account.dynamic.financial.report.line.form</field>
            <field name="model">account.dynamic.financial.report.line</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Dynamic Account Report Line">
                    <group>
                        <group string="Main Info">
                            <field name="name"/>
                            <field name="code"/>
                            <field name="sequence"/>
                            <field name="parent_id" options="{'no_create': True}"/>
                            <field name="level"/>
                            <field name="show_total_group_footer"/>
                            <field name="report_style"/>
                        </group>
                        <group string="Computation">
                            <field name="formulas"/>
                            <field name="reseve_balance"/>
                            <field name="domain_type"/>
                            <field name="domain" attrs="{'invisible':[('domain_type', '!=', 'custom')]}" />
                            <field name="report_value_id" attrs="{'invisible':[('domain_type', '!=', 'report')]}" options="{'no_create': True}"/>
                            <field name="special_date_changer"/>
                        </group>
                        <group string="Children Lines">
                            <field name="children_ids" nolabel="1"/>
                        </group>
                        <group string="Domain Filter" attrs="{'invisible':[('domain_type', 'not in', ['type','account'])]}">
                            <field name="account_type_ids" nolabel="1" attrs="{'invisible':[('domain_type', '!=', 'type')]}" />
                            <field name="account_ids" nolabel="1" attrs="{'invisible':[('domain_type', '!=', 'account')]}" />
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="accounting_report_view" model="ir.ui.view">
            <field name="name">Financial Report</field>
            <field name="model">accounting.dynamic.report</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Report Options">
                    <group col="4">
                        <field name="company_id" groups="base.group_multi_company"/>
                        <field name="account_report_id" />
                        <field name="display_report_document"/>
                        <field name="target_move" widget="radio"/>
                        <field name="enable_filter"/>
                        <field name="debit_credit" attrs="{'invisible': [('enable_filter','=',True)]}" string="Show Debit/Credit"/>
                    </group>
                    <group col="4">
                        <field name="date_from" />
                        <field name="date_to"/>
                    </group>
                    <group col="3">
                        <notebook tabpos="up" colspan="4">
                            <page string="Comparison" name="comparison" attrs="{'invisible': [('enable_filter','=',False)]}">
                                <group>
                                    <field name="label_filter" attrs="{'required': [('enable_filter', '=', True)]}"/>
                                    <field name="filter_cmp"/>
                                </group>
                                <group string="Dates" attrs="{'invisible':[('filter_cmp', '!=', 'filter_date')]}">
                                    <field name="date_from_cmp" attrs="{'required':[('filter_cmp', '=', 'filter_date')]}"/>
                                    <field name="date_to_cmp" attrs="{'required':[('filter_cmp', '=', 'filter_date')]}"/>
                                </group>
                            </page>
                        </notebook>
                    </group>
                    <footer>
                        <button name="check_report" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                        or 
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        
        <record id="dynamic_financial_report_action" model="ir.actions.act_window">
            <field name="name">Dynamic Financial Report</field>
            <field name="res_model">account.dynamic.financial.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_dynamic_financial_report_tree"/>
        </record>

        <record id="action_dynamic_financial_report" model="ir.actions.act_window">
            <field name="name">Financial Report</field>
            <field name="res_model">accounting.dynamic.report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="accounting_report_view"/>
            <field name="target">new</field>
        </record>

        <report 
            id="action_dynamic_report_financial"
            model="accounting.dynamic.report"
            string="Dynamic Financial report"
            report_type="qweb-pdf"
            name="account_dynamic_report.dynamic_report_financial"
            file="account_dynamic_report.dynamic_report_financial"
            />

        <menuitem 
            id="menu_dynamic_financial_report"
            name="Dynamic Financial Report" 
            parent="account.menu_account_reports" 
            sequence="1" 
            action="dynamic_financial_report_action" 
            groups="account.group_account_manager"/>

        <menuitem 
            id="menu_action_dynamic_financial_report" 
            parent="account.account_reports_management_menu" 
            action="action_dynamic_financial_report" 
            sequence="0"/>
    </data>
</openerp>