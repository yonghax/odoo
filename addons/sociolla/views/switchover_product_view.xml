<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_product_switchover_form" model="ir.ui.view">
            <field name="name">product.product.switchover.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
            <field name="priority" eval="99" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='attribute_value_ids']" position="before">
                <div>
                    <field name="is_product_switchover"/>
                    <label for="is_product_switchover" string="Switch-over Product"/>
                    <field name="switchover_product_mapping" attrs="{'invisible':[('is_product_switchover','=',False)],'required':[('is_product_switchover','=',True)]}"/>
                </div>
                </xpath>
            </field>
        </record>

        <record id="view_product_template_switchover_form" model="ir.ui.view">
            <field name="name">product.template.switchover.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="priority" eval="99" />
            <field name="arch" type="xml">
                <div name="options" position="inside">
                    <div>
                        <field name="is_product_switchover"/>
                        <label for="is_product_switchover"/>
                        <field name="switchover_product_mapping" attrs="{'invisible':[('is_product_switchover','=',False)],'required':[('is_product_switchover','=',True)]}"/>
                    </div>
                </div>
            </field>
        </record>

        <record id="switchover_product_form" model="ir.ui.view">
            <field name="name">switchover.product.form</field>
            <field name="model">switchover.product</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Switch-Over Product">
                    <header>
                        <button name="action_cancel" states="draft,sent,sale" type="object" string="Cancel"/>
                        <button name="action_draft" states="cancel" type="object" string="Set to Draft"/>
                        <button name="action_done" states="draft" string="Confirm Switch-Over" type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                    </header>
                    <sheet>
                        <h1 class="hidden-xs">
                            <field name="name" attrs="{'invisible': [('name','=','/')]}" readonly="1"/>
                        </h1>
                        <group>
                            <group>
                                <field name="create_date" readonly="1"/>
                                <field name="location_id" domain="[('usage','=', 'internal')]"/>
                            </group>
                            <group>
                                <field name="date_expect"/>
                                <field name="date_done" readonly="1"/> 
                            </group>
                        </group>
                        <field name="swithcover_lines" options="{'reload_on_button': True}" mode="tree,kanban">
                            <tree editable="bottom">
                                <field name="product_id" options='{"always_reload": True}' on_change="product_id_change(product_id, product_uom_id, product_qty)" required="1"/>
                                <field name="product_uom_id" groups="product.group_uom"/>
                                <field name="product_qty" attrs="{'required': [('product_id', '!=', False)]}"/>
                            </tree>
                            <kanban class="o_kanban_mobile">
                                <field name="product_id" options='{"always_reload": True}' on_change="product_id_change(product_id, product_uom_id, product_qty)" required="1"/>
                                <field name="product_uom_id" groups="product.group_uom"/>
                                <field name="product_qty" attrs="{'required': [('product_id', '!=', False)]}"/>
                            </kanban>
                        </field>
                        <field name="notes"/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="switchover_product_tree" model="ir.ui.view">
            <field name="name">switchover.product.tree</field>
            <field name="model">switchover.product</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Switch-Over Product">
                    <field name="name"/>
                    <field name="create_date"/>
                    <field name="date_expect"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>       
        
        <record id="switchover_product_action" model="ir.actions.act_window">
            <field name="name">Switch-Over Product</field>
            <field name="res_model">switchover.product</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="switchover_product_tree"/>
        </record>

        <menuitem 
            id="menu_switchover_product"
            name="Switch-Over Products" 
            parent="stock.menu_stock_inventory_control" 
            sequence="99" 
            action="switchover_product_action" 
            groups="stock.group_stock_user"/>
    </data>
</openerp>