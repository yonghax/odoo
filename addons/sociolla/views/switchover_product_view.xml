<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="switchover_product_form" model="ir.ui.view">
            <field name="name">swithcover.product.form</field>
            <field name="model">swithcover.product</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Switch-Over Product">
                    <header>
                        <button name="action_cancel" states="draft,sent,sale" type="object" string="Cancel"/>
                        <button name="action_draft" states="cancel" type="object" string="Set to Quotation"/>
                        <button name="action_done" states="draft" string="Confirm Switch-Over" type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                    </header>
                    <group>
                        <field name="create_date" readonly="1"/>
                        <field name="product_id" options='{"always_reload": True}'/>
                        <field name="qty"/>
                        <field name="notes"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="switchover_product_tree" model="ir.ui.view">
            <field name="name">swithcover.product.tree</field>
            <field name="model">swithcover.product</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Switch-Over Product">
                    <field name="create_date"/>
                    <field name="product_id"/>
                    <field name="qty"/>
                    <field name="notes"/>
                </tree>
            </field>
        </record>       
        
        <record id="switchover_product_action" model="ir.actions.act_window">
            <field name="name">Switch-Over Product</field>
            <field name="res_model">swithcover.product</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="switchover_product_tree"/>
        </record>

        <menuitem 
            id="menu_switchover_product"
            name="Switch-Over Products" 
            parent="stock.menu_stock_inventory_control" 
            sequence="99" 
            action="switchover_product_action" 
            groups="stock.group_stock_user"/>
    </data>
</openerp>