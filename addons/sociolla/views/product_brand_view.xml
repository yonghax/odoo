<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="product_brand_inherit_view" model="ir.ui.view">
            <field name="name">product.brand.form.inherit</field>
            <field name="model">product.brand</field>
            <field name="inherit_id" ref="product_brand.view_product_brand_form"/>
            <field name="priority" eval="5"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//div[@class='oe_right oe_button_box']" position="inside">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                        </button>
                    </xpath>

                    <field name="partner_id" position="before">
                        <field name="business_type" widget="radio"/>
                        <field name="sale_ok" />
                        <field name="purchase_ok" />
                    </field>
                </data>
            </field>
        </record>
    </data>
</openerp>