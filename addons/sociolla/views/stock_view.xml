<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="addon_view_inventory_form_inherit" model="ir.ui.view">
            <field name="name">stock.inventory.form.addon.inherit</field>
            <field name="model">stock.inventory</field>
            <field name="inherit_id" ref="stock.view_inventory_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='date']" position="after">
                        <field name="brand_id" attrs="{'invisible': [('filter', '!=', 'brand')], 'required': [('filter', '=', 'brand')]}"/>
                    </xpath>

                    <xpath expr="//button[@name='action_done']" position="replace">
                        <button name="action_done" states="to approve" string="Approve &amp; Validate" type="object" class="oe_highlight"
                            groups="sociolla.group_stock_reviewer"/>
                    </xpath>

                    <xpath expr="//button[@name='action_done']" position="before">
                        <button name="request_approval" states="confirm" string="To Approve" type="object" class="oe_highlight"
                            groups="stock.group_stock_user"/>
                    </xpath>

                    <xpath expr="//button[@name='action_cancel_inventory']" position="replace">
                        <button name="action_cancel_inventory" states="to approve,confirm" string="Cancel Inventory" type="object"/>
                    </xpath>

                    <xpath expr="//notebook" position="after">
                         <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                    </xpath>

                    <xpath expr="//notebook/page/field[@name='line_ids']/tree/field[@name='product_id']" position="after">
                         <field name="product_brand_id" string="Brand" groups="account.group_account_manager"/>
                         <field name="standard_price" string="Cost" groups="account.group_account_manager"/>
                    </xpath>

                    <xpath expr="//notebook/page/field[@name='line_ids']/tree/field[@name='product_qty']" position="after">
                        <field name="total_cost" groups="account.group_account_manager"/>
                    </xpath>

                    <xpath expr="//notebook" position="inside">
                         <page string="Journal Created" attrs="{'invisible': [('state', '!=', 'done')]}">
                            <field name="account_move_id"/>
                        </page>
                    </xpath>
                    
                    <xpath expr="//notebook/page/field[@name='line_ids']/tree/field[@name='theoretical_qty']" position="after">
                        <field name="theoretical_qty_all"/>
                        <button type="object" name="action_open_quants" class="oe_stat_button" icon="fa-building-o">
                        </button>
                    </xpath>

                    <xpath expr="//notebook/page/field[@name='line_ids']/tree/field[@name='location_id']" position="replace">
                        <field name="location_id" domain="[('usage', '=', 'internal')]" groups="stock.group_locations" />
                    </xpath>
                </data>
            </field>
        </record>
        
        <record id="view_picking_form_inherit" model="ir.ui.view">
            <field name="name">stock.picking.form.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//button[@name='do_new_transfer']" position="attributes">
                        <attribute name="groups">stock.group_stock_manager</attribute>
                    </xpath>
                    <xpath expr="//button[@name='force_assign']" position="attributes">
                        <attribute name="groups">stock.group_stock_manager</attribute>
                    </xpath>
                    <xpath expr="////tree/field[@name='product_id']" position="after">
                        <field name="barcode" readonly="1"/>
                    </xpath>
                    <xpath expr="////tree/field[@name='to_loc']" position="after">
                        <field name="warehouse_location" readonly="1"/>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</openerp>