<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <record id="purchase_order_form" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='order_line']/tree/field[@name='taxes_id']" position="before">
                        <field name="discount"/>
                    </xpath>
                    <xpath expr="//field[@name='order_line']/tree" position="attributes">
                        <attribute name="editable"/>
                    </xpath>
                    <xpath expr="//field[@name='order_line']/form/sheet/group/group/field[@name='price_unit']" position="after">
                        <field name="discount"/>
                    </xpath>
                </data>
            </field>
        </record>

        <record id="purchase_order_form_receive_status" model="ir.ui.view">
            <field name="name">product.order.form.receive.status.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <field name="incoterm_id" position="after">
                    <field name="picking_status"/>
                </field>
            </field>
        </record>

        <record id="purchase_order_form_shop" model="ir.ui.view">
            <field name="name">product.order.form.shop</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <field name="date_order" position="after">
                    <field name="shop_id" required="True" options="{'no_create': True}" />
                </field>
            </field>
        </record>

        <record id="purchase_order_tree" model="ir.ui.view">
            <field name="name">purchase.order.tree.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_tree"/>
            <field name="arch" type="xml">
                <field name="state" position="after">
                    <field name="picking_status"/>
                </field>
            </field>
        </record>
        
        <record id="purchase_order_validator_wizard" model="ir.ui.view">
            <field name="name">purchase.order.validator.wizard</field>
            <field name="model">purchase.validator.approval</field>
            <field name="arch" type="xml">
                <form string="Immediate transfer?">
                    <group>
                        <p>
                            You have some order with unit price 0 or some product with consigment brand not yet set the owner id. If you click <i>apply</i>,
                            Odoo will commit all order.
                        </p>
                    </group>
                    <field name="validator_lines" string="Purchase Order Lines" options="{'no_create': True}">
                        <tree readonly="1">
                            <field name="product_id"/>
                            <field name="msg_validation"/>
                        </tree>
                    </field>
                    <footer>
                        <button name="process" string="_Apply" type="object" class="btn-primary"/>
                        <button string="_Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="close_bakclog_order_view" model="ir.ui.view">
            <field name="name">Close Backlog Order</field>
            <field name="model">close.purchase.order</field>
            <field name="arch" type="xml">
                <form string="Close Backlog Order">
                    <label string="All selected purchase orders will be closed. You won't be able to receive item again."/>
                    <footer>
                        <button string="Close Purchase Orders" name="close_order" type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_close_backlog_order" model="ir.actions.act_window">
            <field name="name">Close Backlog Orders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">close.purchase.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="close_bakclog_order_view"/>
            <field name="context">{}</field>
            <field name="target">new</field>
            <field name="help">This wizard will close all orders selected. Once orders are closed, you can not process receive item anymore.</field>
        </record>

        <record model="ir.values" id="validate_account_move_values">
            <field name="model_id" ref="purchase.model_purchase_order" />
            <field name="name">Close Backlog Orders</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_close_backlog_order'))" />
            <field name="key">action</field>
            <field name="model">purchase.order</field>
        </record>
    </data>
</odoo>