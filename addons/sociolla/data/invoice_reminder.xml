<openerp>
    <data noupdate="1">
        <record id="ir_cron_invoice_reminder_mail" model="ir.cron">
            <field name="name">Invoice Reminder Mail</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">1</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')"></field>
            <field eval="False" name="doall"/>
            <field eval="'account.invoice'" name="model"/>
            <field eval="'invoice_reminder'" name="function"/>
            <field name="priority">1</field>
        </record>
   </data>
</openerp>