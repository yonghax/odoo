<openerp>
  <data>
    <record model="ir.ui.view" id="partner_property_inherit">
      <field name="name">res.partner.property.inherit</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="model">res.partner</field>
      <field name="arch" type="xml">
        <group name="purchase" position="inside">
          <field name="is_tax_payable" attrs="{'invisible': [('supplier', '=', False)]}"/>
          <field name="tax_id_number" attrs="{'invisible': [('is_tax_payable','=',False)]}"/>
          <field name="default_purchase_tax" attrs="{'invisible': [('is_tax_payable','=',False)]}"/>
        </group>
      </field>
    </record>

    <record model="ir.ui.view" id="product_category_inherit">
      <field name="name">product.category.property.inherit</field>
      <field name="inherit_id" ref="product.product_category_form_view"/>
      <field name="model">product.category</field>
      <field name="arch" type="xml">
        <field name="parent_id" position="after">
          <field name="category_purchase_type"/>
        </field>
      </field>
    </record>

    <record model="ir.ui.view" id="product_template_inherit">
      <field name="name">view.product.template.inherit</field>
      <field name="inherit_id" ref="product.product_template_form_view"/>
      <field name="model">product.template</field>
      <field name="arch" type="xml">
        <field name="categ_id" position="before">
          <field name="product_purchase_type"/>
        </field>
      </field>
    </record>

    <record id="view_product_brand_form" model="ir.ui.view">
      <field name="name">product.brand.form.inherit</field>
      <field name="model">product.brand</field>
      <field name="inherit_id" ref="product_brand.view_product_brand_form"/>
      <field name="arch" type="xml">
        <field name="partner_id" position='before'>
          <field name='purchase_type' required="1"/>
        </field>
      </field>
  </record>
  </data>
</openerp>