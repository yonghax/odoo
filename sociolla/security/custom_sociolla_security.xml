<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">
        <record model="ir.module.category" id="module_sociolla">
            <field name="name">Addon Sociolla</field>
            <field name="sequence">99</field>
        </record>
        
        <record id="ar_monitoring" model="res.groups">
            <field name="name">AR Monitoring</field>
            <field name="category_id" ref="sociolla.module_sociolla"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>
        <record id="group_purchase_b2b" model="res.groups">
            <field name="name">B2B</field>
            <field name="category_id" ref="sociolla.module_sociolla"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>
        <record id="group_purchase_b2c" model="res.groups">
            <field name="name">B2C</field>
            <field name="category_id" ref="sociolla.module_sociolla"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>
    </data>
    <data noupdate="1">
        <record model="ir.rule" id="purchase_order_shop">
            <field name="name">Purchase Order by Shop</field>
            <field name="model_id" ref="model_purchase_order"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('shop_id.apply_group_id', 'in', user.groups_id.ids)]</field>
        </record>
        <record model="ir.rule" id="sale_order_shop">
            <field name="name">Sale Order by Shop</field>
            <field name="model_id" ref="model_sale_order"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('shop_id.apply_group_id', 'in', user.groups_id.ids)]</field>
        </record>
        <record model="ir.rule" id="sale_shop">
            <field name="name">Shop by Business Type</field>
            <field name="model_id" ref="model_sale_shop"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('apply_group_id', 'in', user.groups_id.ids)]</field>
        </record>
        <record model="ir.rule" id="partner_shop">
            <field name="name">Partner by Shop</field>
            <field name="model_id" ref="model_res_partner"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('shop_id.apply_group_id', 'in', user.groups_id.ids)]</field>
        </record>
        <record model="ir.rule" id="product_template_shop">
            <field name="name">Product Template by Shop</field>
            <field name="model_id" ref="model_product_template"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('shop_id.apply_group_id', 'in', user.groups_id.ids)]</field>
        </record>

        <record id="group_stock_reviewer" model="res.groups">
            <field name="name">Reviewer</field>
            <field name="category_id" ref="base.module_category_warehouse_management"/>
            <field name="implied_ids" eval="[(4, ref('stock.group_stock_manager'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <record model="ir.rule" id="product_brand_unarchived">
            <field name="name">Active Product</field>
            <field name="model_id" ref="model_product_template"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('product_brand_id.active', '=', True)]</field>
        </record>
    </data>
</openerp>