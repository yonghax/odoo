<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="property_rule_advance_manager" model="ir.rule">
            <field name="name">Manager Advance</field>
            <field name="model_id" ref="model_hr_advance"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('account.group_account_user')), (4, ref('base.group_hr_manager')), (4, ref('base.group_hr_user'))]"/>
        </record>
        <record id="property_rule_advance_approval" model="ir.rule">
            <field name="name">Approval Advance</field>
            <field name="model_id" ref="model_hr_advance"/>
            <field name="domain_force">['|',('employee_id.parent_id.user_id', '=', user.id),'|',('employee_id.department_id.manager_id.user_id', '=', user.id),('employee_id.department_id.manager_id.parent_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('hr_advance.group_approve_expense'))]"/>
        </record>
        <record id="property_rule_advance_employee" model="ir.rule">
            <field name="name">Employee Advance</field>
            <field name="model_id" ref="model_hr_advance"/>
            <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="property_rule_expense_approval" model="ir.rule">
            <field name="name">Approval Expense</field>
            <field name="model_id" ref="hr_expense.model_hr_expense"/>
            <field name="domain_force">['|',('employee_id.parent_id.user_id', '=', user.id),'|',('employee_id.department_id.manager_id.user_id', '=', user.id),('employee_id.department_id.manager_id.parent_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('hr_advance.group_approve_expense'))]"/>
        </record>

    </data>
</odoo>
