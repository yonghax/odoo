<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_expense_post_wizard_view_form" model="ir.ui.view">
        <field name="name">hr.expense.post.wizard.form</field>
        <field name="model">hr.expense.post.wizard</field>
        <field name="arch" type="xml">
            <form string="Expense generate entries">
            	<p class="oe_grey">
            		This wizard will generate accounting entries the all the selected approved expenses.
            	</p>
                <footer>
                    <button string='Post' name="expense_generate_entries" type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
           </form>
        </field>
    </record>

    <record id="hr_expense_post_wizard_action" model="ir.actions.act_window">
        <field name="name">Generate Accounting Entries</field>
        <field name="res_model">hr.expense.post.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="hr_expense_post_wizard_view_form"/>
        <field name="target">new</field>
        <field name="groups_id" eval="[(4, ref('account.group_account_user'))]"/>
    </record>
</odoo>