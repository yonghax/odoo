<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Expense-related subtypes for messaging / Chatter -->
        <record id="mt_advance_approved" model="mail.message.subtype">
            <field name="name">Approved</field>
            <field name="res_model">hr.advance</field>
            <field name="default" eval="False"/>
            <field name="description">Advance approved</field>
        </record>
        <record id="mt_advance_refused" model="mail.message.subtype">
            <field name="name">Refused</field>
            <field name="res_model">hr.advance</field>
            <field name="default" eval="True"/>
            <field name="description">Advance refused</field>
        </record>
        <record id="mt_advance_confirmed" model="mail.message.subtype">
            <field name="name">To Approve</field>
            <field name="res_model">hr.advance</field>
            <field name="description">Advance confirmed, waiting confirmation</field>
            <field name="default" eval="True"/>
        </record>
        <!-- Department (Parent) related subtypes for messaging / Chatter -->
        <record id="mt_department_advance_confirmed" model="mail.message.subtype">
            <field name="name">Advances To Approve</field>
            <field name="res_model">hr.department</field>
            <field name="default" eval="True"/>
            <field name="parent_id" eval="ref('mt_advance_confirmed')"/>
            <field name="relation_field">department_id</field>
            <field name="sequence" eval="10"/>
        </record>

    </data>
</odoo>
